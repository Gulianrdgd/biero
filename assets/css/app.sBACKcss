$footer-padding: 1rem 1.5rem 1rem;

$theme-colors: (
        "primary":    #e62272,
        "secondary":  purple,
);

.logo{
  max-width: 100%;
}

.vertical{
  float: left;
  width: 100%;
}

.vcentered{
  margin-top: auto !important;
  margin-bottom: auto !important;
}

.is-horizontal-center {
  justify-content: center;
}

.is-vertical-center {
  display: flex;
  align-items: center;
}

.noselect {
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none; /* Safari */
  -khtml-user-select: none; /* Konqueror HTML */
  -moz-user-select: none; /* Old versions of Firefox */
  -ms-user-select: none; /* Internet Explorer/Edge */
  user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome, Edge, Opera and Firefox */
}

.dot{
  border-radius: 50px;
  height: 1.9rem;
  margin-right: 1rem;
  margin-top: auto;
  margin-bottom: auto;
}

.dotCreate{
  width: 1rem;
  height: 1rem;
}

.footnote{
  position: fixed;
  bottom: 10px;
}

.plusmin {
  margin-top: auto;
  margin-bottom: auto;
}

.fade{
  animation: fadein 1s;
}
.hidden{
  opacity: 0;
}
@keyframes fadein {
  from { opacity: 0; }
  to   { opacity: 1; }
}

.backArrow{
  display: flex;
  top: 6.5rem;
  left: 3rem;
}

@media only screen and (max-width: 768px) {
  .backArrow{
    display: block;
    top: 1.5rem;
    left: 1.5rem;
  }
}

.center{
  align-items: center;
  align-content: center;
  text-align: center;
}

.player{
  width: 7%;
  transform: translateY(-50%) translateX(-50%);
}

/* Alerts and form errors */
.alert {
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  border-radius: 4px;
}
.alert-info {
  color: #31708f;
  background-color: #d9edf7;
  border-color: #bce8f1;
}
.alert-warning {
  color: #8a6d3b;
  background-color: #fcf8e3;
  border-color: #faebcc;
}
.alert-danger {
  color: #a94442;
  background-color: #f2dede;
  border-color: #ebccd1;
}
.alert p {
  margin-bottom: 0;
}
.alert:empty {
  display: none;
}


@import "../node_modules/bootstrap/scss/bootstrap";

.nav-tabs{
  border-bottom: none;
}

img {
    pointer-events: none;
}

.nav-item:hover{
  backdrop-filter: brightness(30);
}

.leaderboard{
  right: 0;
  top : 0;
  height: 100%;
  position: absolute;
}

.invalid{
  border: none;
  border-bottom: 2px solid red;
}
